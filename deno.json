{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "strict": true,
    "lib": [
      "deno.ns",
      "deno.unstable"
    ]
  },
  "imports": {
    "testing/": "https://deno.land/std@0.188.0/testing/"
  },
  "tasks": {
    "start": "deno run -A ooneex.ts",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "fmt": "deno fmt",
    "lint": "deno fmt --check && deno lint",
    "cache": "deno cache ./src/deps.ts"
  },
  "lint": {
    "exclude": [
      "node_modules",
      "var"
    ]
  },
  "fmt": {
    "exclude": [
      "node_modules",
      "var"
    ]
  },
  "lock": false,
  "nodeModulesDir": true
}
